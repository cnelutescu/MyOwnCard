<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:src="@drawable/flower88"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:fontFamily="cursive"
        android:padding="5dp"
        android:text="IT'S LOVE! "
        android:textAlignment="center"
        android:textColor="#B2FF59"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textView1"
        android:fontFamily="casual"
        android:padding="5dp"
        android:text="You're invited to the wedding of "
        android:textColor="#B2FF59"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_centerInParent="true"
        android:fontFamily="cursive"
        android:padding="2dp"
        android:text=" Ana"
        android:textAlignment="center"
        android:textColor="#B2FF59"
        android:textSize="46sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:padding="2dp"
        android:text=" and"
        android:layout_below="@id/textView3"
        android:textColor="#B2FF59"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_centerInParent="true"
        android:fontFamily="cursive"
        android:padding="2dp"
        android:text=" Lucian"
        android:textAlignment="center"
        android:textColor="#B2FF59"
        android:textSize="46sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:fontFamily="cursive"
        android:layout_marginTop="1dp"
        android:padding="2dp"
        android:text="Pavilionul Printesa Nadeja"
        android:textColor="#B2FF59"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView7"
        android:text="Palatul Stirbei - Buftea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_above="@id/textView8"
        android:fontFamily="cursive"
        android:padding="2dp"
        android:layout_margin="5dp"
        android:textColor="#B2FF59"
        android:textSize="20sp"
        android:textStyle="bold|italic" />
    <TextView
        android:id="@+id/textView61"
        android:text=" at 20:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_above="@id/textView7"
        android:fontFamily="cursive"
        android:padding="2dp"
        android:layout_margin="2dp"
        android:textColor="#B2FF59"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView62"
        android:text=" September 29, 2018"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_above="@id/textView61"
        android:fontFamily="cursive"
        android:padding="2dp"
        android:layout_margin="2dp"
        android:textColor="#B2FF59"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>